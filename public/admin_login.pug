extends layout

block content
  .h-100.d-flex.bg-white.justify-content-center.align-items-center.col-md-12.col-lg-8
      .mx-auto.app-login-box.col-sm-12.col-md-10.col-lg-9
        img(src='unilogo.jpg', alt='')
        h1 Admin Login
        .divider.row
        .justify-content-center.align-items-center
          .mx-auto.app-login-box.col-md-12
            .modal-dialog.w-100.mx-auto
              .modal-content
                .modal-body
                  .h5.modal-title.text-center                  
                    h4.mt-2
                      span                        
                        div(class='auth-form px-3')
                          form(method='POST', action='/admins/login')
                            #form-group
                              label Username:
                              input.form-control(name='username', type='text')     
                            #form-group
                              label Password:
                              input.form-control(name='password', type='password')    
                            br
                            input.btn.btn-primary(type='submit',value='Submit')
    
